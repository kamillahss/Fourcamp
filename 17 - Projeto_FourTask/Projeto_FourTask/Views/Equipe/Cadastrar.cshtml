@model Equipe

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar equipe</h1>

<mensagem texto="@TempData["msg"]"></mensagem>

<form asp-action="Cadastrar">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Senha" class="form-label"></label>
        <input asp-for="Senha" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AreaAtuacao" class="form-label"></label>
        <select asp-for="AreaAtuacao" class="form-label" asp-items="@Html.GetEnumSelectList<AreaAtuacao>()">
            <option>Selecione</option>
        </select>
        <span asp-validation-for="AreaAtuacao" class="text-danger"></span>
    </div>
    
    <input type="submit" value="Cadastrar" class="btn btn-outline-success" />
</form>